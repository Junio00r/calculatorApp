<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="false"
    android:layout_alignParentTop="true"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view_historic"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@null"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/editTextViewID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@color/pink_white">

            <com.devmobile.android.calculadora.model.EditTextView
                android:id="@+id/editTextViewID"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:allowUndo="true"
                android:background="@null"
                android:breakStrategy="balanced"
                android:firstBaselineToTopHeight="10dp"
                android:hint="@null"
                android:importantForAccessibility="no"
                android:importantForAutofill="no"
                android:inputType="text|textNoSuggestions|numberDecimal"
                android:lines="1"
                android:minWidth="390dp"
                android:minHeight="125dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:text="@null"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textCursorDrawable="@color/black"
                android:typeface="sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textResultExpression"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:lines="1"
                android:maxWidth="500dp"
                android:text="="
                android:textAlignment="textEnd"
                android:textColor="@color/gray_background"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/editTextViewID" />

            <ImageButton
                android:id="@+id/copyResult"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-48dp"
                android:clickable="true"
                android:contentDescription="@string/copy"
                android:onClick="copyCalculate"
                app:layout_constraintEnd_toStartOf="@+id/textResultExpression"
                app:layout_constraintTop_toBottomOf="@+id/editTextViewID"
                app:srcCompat="?attr/actionModeCopyDrawable" />

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <Button
                    android:id="@+id/button"
                    android:layout_width="40dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/gray_background"
                    android:importantForAccessibility="no"
                    app:layout_collapseMode="pin"
                    tools:ignore="TouchTargetSizeCheck" />

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:maxHeight="700dp"
                    android:minHeight="499dp"
                    app:columnCount="4"
                    app:layout_collapseMode="pin"
                    app:rowCount="6">

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button1"
                        style="@style/EspecialButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/abre_parentese"
                        app:layout_column="0"
                        app:layout_row="0" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button2"
                        style="@style/NumberButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/sete"
                        app:layout_column="0"
                        app:layout_row="1" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button3"
                        style="@style/NumberButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/quatro"
                        app:layout_column="0"
                        app:layout_row="2" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button4"
                        style="@style/NumberButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/um"
                        app:layout_column="0"
                        app:layout_row="3" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button5"
                        style="@style/EspecialButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="expressionClear"
                        android:text="@string/deletar_expressao"
                        app:layout_column="0"
                        app:layout_row="4" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button6"
                        style="@style/EspecialButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/fecha_parentese"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button7"
                        style="@style/NumberButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/oito"
                        app:layout_column="1"
                        app:layout_row="1" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button8"
                        style="@style/NumberButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/cinco"
                        app:layout_column="1"
                        app:layout_row="2" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button9"
                        style="@style/NumberButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/dois"
                        app:layout_column="1"
                        app:layout_row="3" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button10"
                        style="@style/NumberButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/zero"
                        app:layout_column="1"
                        app:layout_row="4" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button11"
                        style="@style/EspecialButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/porcentagem"
                        app:layout_column="0"
                        app:layout_row="5" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button12"
                        style="@style/NumberButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/nove"
                        app:layout_column="2"
                        app:layout_row="1" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button13"
                        style="@style/NumberButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/seis"
                        app:layout_column="2"
                        app:layout_row="2" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button14"
                        style="@style/NumberButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/tres"
                        app:layout_column="2"
                        app:layout_row="3" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button15"
                        style="@style/EspecialButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/separador"
                        app:layout_column="2"
                        app:layout_row="4" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button16"
                        style="@style/EspecialButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="excludeCharacter"
                        android:text="@string/deletar_caractere"
                        app:layout_column="3"
                        app:layout_row="0" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button17"
                        style="@style/EspecialButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/divisao"
                        app:layout_column="2"
                        app:layout_row="0" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button18"
                        style="@style/EspecialButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/multiplicacao"
                        app:layout_column="3"
                        app:layout_row="1" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button19"
                        style="@style/EspecialButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/subtracao"
                        app:layout_column="3"
                        app:layout_row="2" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button20"
                        style="@style/EspecialButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:text="@string/soma"
                        app:layout_column="3"
                        app:layout_row="3" />

                    <com.devmobile.android.calculadora.model.BackgroundButtonView
                        android:id="@+id/button21"
                        style="@style/EspecialButtonStyle"
                        android:layout_margin="5dp"
                        android:onClick="equalsResult"
                        android:text="@string/resultado"
                        app:layout_column="3"
                        app:layout_row="4" />

                </androidx.gridlayout.widget.GridLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
